doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title オーダーメイド本棚描画システム（デモ）
  body
    nav(aria-label='パンくずリスト')
      ol
        li
          a(href='./' aria-current='page') ホーム
    main
      h1 オーダーメイド本棚描画システム（デモ）

      div(style='display: flex')
        div(style='flex-grow: 1')
          if imageFront
            figure
              img(src=imageFront alt='正面画像')
              figcaption 正面画像
        div(style='flex-grow: 1')
          if imageSide
            figure
              img(src=imageSide alt='側面画像')
              figcaption 側面画像

      form(role='form')
        div
          label(for='width') W(幅)[cm]
          input(type='number' name='width' id='width' value=form.width)
        div
          label(for='height') H(高さ)[cm]
          input(type='number' name='height' id='height' value=form.height)
        div
          label(for='depth') D(奥行)[cm]
          input(type='number' name='depth' id='depth' value=form.depth)
        div
          label(for='row') 棚板の枚数
          input(type='number' name='row' id='row' value=form.row)
        div
          label(for='thickness') 棚板の厚さ[mm]
          input(type='number' name='thickness' id='thickness' value=form.thickness)
        div
          label(for='fix') 棚板の取り付け
          input(type='text' name='fix' id='fix' value=form.fix list='fixList')
          datalist(id='fixList')
            option(value='ビス（固定）')
            option(value='棚ダボ（可動）')
        div
          label(for='back') 背面の有無
          input(type='text' name='back' id='back' value=form.back list='backList')
          datalist(id='backList')
            option(value='あり')
            option(value='なし')
        div
          label(for='background') カラー
          input(type='color' name='background' id='background' value=form.background)
        button(type='submit') 描画
